# YouTube Data API Configuration
# Get your API key from: https://console.developers.google.com/
# Enable YouTube Data API v3 for your project
YOUTUBE_API_KEY=your_youtube_api_key_here

# OpenAI API Configuration
# Get your API key from: https://platform.openai.com/api-keys
# Used for content analysis and script generation
OPENAI_API_KEY=your_openai_api_key_here

# Content Curation Settings
# Maximum number of videos to analyze per search query
MAX_VIDEOS=10
# How many days back to search for videos (1-7 recommended)
DAYS_BACK=7
# Quality score threshold (0-100) - videos below this score are filtered out
QUALITY_THRESHOLD=80
# Minimum number of quality videos required to proceed with script generation
MIN_QUALITY_VIDEOS=1
# Maximum number of search attempts if initial searches don't yield enough quality content
MAX_SEARCH_ATTEMPTS=3

# Search Configuration
# Comma-separated list of keywords to search for on YouTube
# These should align with your content focus and target audience
DEFAULT_SEARCH_KEYWORDS="AI news, AI tools, AI agents, rtificial intelligence, machine learning"

# Script Generation Settings
# Minimum word count for generated scripts
TARGET_WORD_COUNT_MIN=750
# Maximum word count for generated scripts
TARGET_WORD_COUNT_MAX=1500
# Language code for script generation (ISO 639-1 format)
SCRIPT_LANGUAGE=en

# Storage Configuration
# Directory path where curated results and generated scripts will be saved
RESULTS_STORAGE_PATH=./output

# Logging Configuration
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
# Path to log file - directory will be created if it doesn't exist
LOG_FILE=./output/nanook-curator.log

# Development Settings
# Enable debug mode for verbose output and additional logging
DEBUG=false
# Use mock API responses for testing without consuming API quotas
MOCK_APIS=false
